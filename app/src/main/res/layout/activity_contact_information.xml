<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    tools:context=".activity.ContactInformationActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Max Crowdfund B.V."
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/light_gray_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:text="Office hours"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_office_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Working days,09.00 - 17.30 CET"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="Phone"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="+31 10 764 0514"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:text="E-mail"
                        android:paddingTop="@dimen/_8sdp"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="info@maxpropertygroup.com"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="Head office"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_Addaress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Brielselaan 85,3081 AB Rotterdam Netherlands"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="Company registration number"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="74680595"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="VAT number"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_investorId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:text="NL856166352B03"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_8sdp"
                        android:text="AFM registration number"
                        android:textColor="@color/light_gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_accountId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="9999999"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>