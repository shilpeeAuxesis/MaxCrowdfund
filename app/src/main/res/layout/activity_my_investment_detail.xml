<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    tools:context=".activity.MyInvestmentDetailActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/header"
                    layout="@layout/header" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:contentPadding="@dimen/_10sdp">

                                <LinearLayout
                                    android:id="@+id/ll_loan_terms"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:weightSum="1">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvInvestment"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_medium"
                                                android:gravity="left"
                                                android:text=""
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_14sdp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_investment_amount"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:fontFamily="@font/roboto_medium"
                                                android:gravity="right|center"
                                                android:text=""
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="@dimen/_14sdp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:background="@color/light_gray_bg" />

                                    <LinearLayout
                                        android:id="@+id/ll_contant_loan_terms"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/recyclerView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />

                                        <View
                                           android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/light_gray_bg" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingTop="@dimen/_5sdp"
                                            android:paddingBottom="@dimen/_5sdp"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight=".5"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tvInvested"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:gravity="left"
                                                    android:text=""
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_14sdp" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight=".5"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tv_invested_amount"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_gravity="right"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:gravity="right"
                                                    android:text=""
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_14sdp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/light_gray_bg" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="@dimen/_4sdp"
                                                android:layout_weight=".5">

                                                <Button
                                                    android:id="@+id/btn_cancel"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="@dimen/_35sdp"
                                                    android:background="@drawable/rounded_greenline_outline"
                                                    android:fontFamily="@font/roboto_light"
                                                    android:gravity="center"
                                                    android:text="Cancel"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/green"
                                                    android:textSize="@dimen/_12sdp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_4sdp"
                                                android:layout_weight=".5">

                                                <Button
                                                    android:id="@+id/btn_change"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="@dimen/_35sdp"
                                                    android:background="@drawable/button_ripple_green"
                                                    android:fontFamily="@font/roboto_light"
                                                    android:gravity="center"
                                                    android:text="Change"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/colorPrimary"
                                                    android:textSize="@dimen/_12sdp" />

                                            </LinearLayout>
                                        </LinearLayout>

                                        <Button
                                            android:id="@+id/btn_view_pinch"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:background="@drawable/rounded_greenline_outline"
                                            android:fontFamily="@font/roboto_light"
                                            android:gravity="center"
                                            android:text="View pitch"
                                            android:textAllCaps="false"
                                            android:textColor="@color/green"
                                            android:textSize="@dimen/_12sdp" />

                                        <LinearLayout
                                            android:id="@+id/ll_document"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:id="@+id/rl_document_click"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_35sdp"
                                                android:padding="@dimen/_5sdp">

                                                <TextView
                                                    android:id="@+id/tv_arrow_document"
                                                    android:layout_width="@dimen/_25sdp"
                                                    android:layout_height="@dimen/_25sdp"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_centerInParent="true"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:background="@drawable/ic_arrow_down"
                                                    android:fontFamily="@font/roboto_medium" />

                                                <TextView
                                                    android:id="@+id/tv_document"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:gravity="center"
                                                    android:text=""
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_14sdp"
                                                    android:textStyle="bold" />

                                            </RelativeLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_1sdp"
                                                android:background="@color/light_gray_bg" />

                                            <LinearLayout
                                                android:id="@+id/ll_contant_document"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:layout_marginBottom="@dimen/_10sdp"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <androidx.recyclerview.widget.RecyclerView
                                                    android:id="@+id/recyclerViewDocment"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content" />

                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_repayment_schedule"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginBottom="@dimen/_10sdp"
                                            android:orientation="vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:paddingRight="@dimen/_5sdp">

                                            <RelativeLayout
                                                android:id="@+id/rl_repayment_schedule_click"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_35sdp"
                                                android:padding="@dimen/_5sdp">

                                                <TextView
                                                    android:id="@+id/tv_arrow_repayment_schedule"
                                                    android:layout_width="@dimen/_25sdp"
                                                    android:layout_height="@dimen/_25sdp"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_centerInParent="true"
                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                    android:background="@drawable/ic_arrow_down"
                                                    android:fontFamily="@font/roboto_medium" />

                                                <TextView
                                                    android:id="@+id/tv_repayment_schedule"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:fontFamily="@font/roboto_medium"
                                                    android:gravity="center"
                                                    android:text=""
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="@dimen/_14sdp"
                                                    android:textStyle="bold" />

                                            </RelativeLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_1sdp"
                                                android:background="@color/light_gray_bg" />

                                            <LinearLayout
                                                android:id="@+id/ll_repayment_schedule_content"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:orientation="vertical">

                                                <androidx.recyclerview.widget.RecyclerView
                                                    android:id="@+id/recyclerViewRepayment"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>