<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvHeadingTittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="left|center"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvHeadingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvHeadingValue"
            android:fontFamily="@font/roboto_medium"
            android:gravity="right|center"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tvHeadingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="right|center"
            android:paddingLeft="@dimen/_2sdp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/lLayoutHeader"
        android:background="@color/light_gray_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto"
                android:gravity="left"
                android:text=""
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tvValue"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:gravity="right"
                android:paddingLeft="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/light_gray_text"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnDeposited"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/rlLayout"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/button_solid_green"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/deposit"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>